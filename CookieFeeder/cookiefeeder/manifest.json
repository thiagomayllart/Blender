{
  "manifest_version": 3,
  "name": "Cookie Feeder",
  "version": "1.0",
  "permissions": [
    "cookies",
    "storage",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["forge.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
